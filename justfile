run:
  hugo serve

build: clean search pdf production zip serve

@clean:
  rm -rf public
  echo ""
  echo "   ðŸš€  cleaned /public"
  echo ""

@search:
  node build.js search
  hugo
  npm run search
  node build.js reset
  echo ""
  echo "   ðŸš€  Search index generated"
  echo ""

@pdf:
  node build.js pdf
  hugo serve & sleep 2
  npm run pdf
  node build.js pdfreset
  node build.js reset
  npm run kill-hugo
  echo ""
  echo "   ðŸš€  PDF generation finished"
  echo ""

@production:
  node build.js production
  hugo --minify
  node build.js reset
  echo ""
  echo "   ðŸš€  Production build finished"
  echo ""

@zip:
  rm -rf dist
  mkdir dist
  node build.js zip
  echo ""
  echo "   ðŸš€  Zipping build to /dist finished"
  echo ""

@serve:
  echo ""
  echo "   ðŸ”Ž  Preview the final website:"
  echo ""
  npm run public
